<div class="container">
  <div class="row">
    <div class="col-md-10 offset-1">
      
    <h3>ユーザー一覧</h3>
    <table width="100%">
      <thead class="table-dark">
        <tr>
          <th scope="col">会員ID</th>
          <th scope="col">ユーザー名</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">ステータス</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <% @users.each do |user| %>
      <tbody>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <% if user.is_deleted %>
              <b class="text-secondary">退会</b>  <%# true(退会済み)の時の表示 %>
            <% else %>
              <b class="text-success">有効</b>  <%# false(初期値)の時の表示 %>
            <% end %>
          </td>
          <td><%= link_to '編集する', edit_admin_user_path(user.id),class: "btn btn-outline-primary" %></td>
          <td><%= link_to '投稿一覧を見る', admin_user_path(user.id),class: "btn btn-outline-info" %></td>
        </tr>
      </tbody>
      <% end %>
    </table>

    </div>
  </div>
</div>
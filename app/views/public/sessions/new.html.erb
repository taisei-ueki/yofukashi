<div class="form-area">
  <h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="devise-field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-box" %>
    <%= f.label :email %>
    <span class="focus-line"></span>
  </div>

  <div class="devise-field">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-box" %>
    <%= f.label :password %>
    <span class="focus-line"></span>
  </div>

  <div class="actions">
    <%= f.submit "Log in",class: "form-btn" %>
  </div>
<% end %>

<h5 class="border-bottom text-left">会員登録がお済みでない方</h5>
<p><%= render "public/shared/links" %>から新規登録を行ってください</p>


</div>
